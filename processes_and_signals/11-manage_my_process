#!/usr/bin/env bash 
# 11-manage_my_process

PID_FILE="/tmp/my_process.pid"   # Use /tmp instead of /var/run
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
PROCESS_SCRIPT="$SCRIPT_DIR/manage_my_process"

case "$1" in
    start)
        bash "$PROCESS_SCRIPT" >/dev/null 2>&1 &
        echo $! > "$PID_FILE"
        echo "manage_my_process started"
        ;;
    stop)
	bash "$PROCESS_SCRIPT" >/dev/null 2>&1 &
        echo $! > "$PID_FILE"
        if [[ -f "$PID_FILE" ]]; then
            kill -9 "$(cat "$PID_FILE")" 2>/dev/null
            rm -f "$PID_FILE"
        fi
        echo "manage_my_process stopped"
        ;;
    restart)
        if [[ -f "$PID_FILE" ]]; then
            kill -9 "$(cat "$PID_FILE")" 2>/dev/null
            rm -f "$PID_FILE"
        fi
        bash "$PROCESS_SCRIPT" >/dev/null 2>&1 &
        echo $! > "$PID_FILE"
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac
