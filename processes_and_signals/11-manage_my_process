#!/bin/bash
# 11-manage_my_process
PID_FILE="/var/run/my_process.pid"
PROCESS_SCRIPT="/full/path/to/manage_my_process"  # <-- Replace with full path

case "$1" in
    start)
        bash "$PROCESS_SCRIPT" &
        echo $! > "$PID_FILE"
        echo "manage_my_process started"
        ;;
    stop)
        if [[ -f "$PID_FILE" ]]; then
            kill -9 "$(cat "$PID_FILE")"
            rm -f "$PID_FILE"
            echo "manage_my_process stopped"
        else
            echo "PID file not found. Is the process running?"
        fi
        ;;
    restart)
        if [[ -f "$PID_FILE" ]]; then
            kill -9 "$(cat "$PID_FILE")"
            rm -f "$PID_FILE"
        fi
        bash "$PROCESS_SCRIPT" &
        echo $! > "$PID_FILE"
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac
